{
  "name": "sidepanel-for-backlog",
  "displayName": "SidePanel for Backlog",
  "version": "0.2.0",
  "description": "ブラウザのサイドパネル(もしくはサイドバー)に、Backlogの課題一覧を表示できます。",
  "author": "ryohidaka <39184410+ryohidaka@users.noreply.github.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ryohidaka/sidepanel-for-backlog.git"
  },
  "bugs": {
    "url": "https://github.com/ryohidaka/sidepanel-for-backlog/issues"
  },
  "homepage": "https://github.com/ryohidaka/sidepanel-for-backlog#readme",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "build-firefox": "plasmo build --target=firefox-mv2 --zip",
    "prepare": "husky install",
    "format": "npx prettier ./src --write"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@plasmohq/storage": "^1.9.3",
    "backlog-js": "^0.13.1",
    "date-fns": "^3.6.0",
    "framer-motion": "^11.0.28",
    "plasmo": "0.85.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-intersection-observer": "^9.8.2",
    "swr": "^2.2.5"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.2.1",
    "@types/chrome": "0.0.266",
    "@types/node": "20.12.7",
    "@types/react": "18.2.78",
    "@types/react-dom": "18.2.25",
    "husky": "^9.0.11",
    "prettier": "3.2.5",
    "typescript": "5.4.5"
  },
  "manifest": {
    "web_accessible_resources": [
      {
        "resources": [
          "assets/icon.png"
        ],
        "matches": [
          "https://*/*"
        ]
      }
    ]
  }
}